<!-- Modal Structure -->

<div class="container">
    <div class="row">
        {{#each model as |card|}}
        <div class="col s12 m6">
            <div class="row">
                <div class="col s2 m2">
                    <div class="card-image-wrapper">
                        <img src="" />
                    </div>
                </div>
                <div class="col s10 m10 left-align">
                    <h5>{{card.name}}</h5>
                    <p>{{card.number}}</p>
                    <p>{{card.id}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col s6 m6">
                    <button>edit</button>
                </div>
                <div class="col s6 m6">
                    <button {{action 'destroyContact' card.id }}>delete</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
